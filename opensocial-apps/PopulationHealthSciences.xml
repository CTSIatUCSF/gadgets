	                    for(var i = 1; i <= 5; i++  ) {
	                        var val = data['piphs_val' + i]; 
	                        if(val) {
	                            $('#piphs-fld' + i).text(val).show();
	                        }               
	                    }
	                    var h = $(".piphs .content").height();
	                    gadgets.window.adjustHeight(h + 50);                                        
	                    
	                    $(".pubs-gadget").unblock();
	                });
