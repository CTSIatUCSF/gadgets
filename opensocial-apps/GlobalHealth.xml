<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Global Health Experience"
				 description="Global Health Experience">
		<Require feature="dynamic-height" />
		<Require feature="views" />
		<Require feature="osapi" />
	</ModulePrefs>

	<Content type="html" view="default, home, profile">
	<![CDATA[<!--HTML-->
    <!DOCTYPE html>
    
	<!-- #includes -->
	<link rel="stylesheet" href="css/gadget.css" type="text/css" media="screen, projection" >
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.js"></script>    
    <script type="text/javascript" src="js/os.js" ></script>
    
	<script type="text/javascript">
	
		function readData() {
			osapi.appdata.get({'userId': '@owner', 'appId':'@app', 'fields' : ['countries']} ).execute(function(result)		{
				
			// get incoming link data (in json string format)
			var viewer = os.osapi.getViewerFromResult(result);
			var countries = viewer.countries.split(";");
			var blist = "<ul>";
			for (var i = 0; i < countries.length; i++) {
				blist += "<li>" + countries[i] + "</li>";
			} 
			blist += "</ul>";
			document.getElementById("countries").innerHTML = blist ;
	
			gadgets.window.adjustHeight(40 + 14*countries.length);
				
			}); /* end osapi.appdata.get */			
		}
		// ========================================			        		

	    	gadgets.util.registerOnLoadHandler(readData);

	</script>
	   <div id="countries" style="padding:0px 0px 10px 10px;"></div>         
    ]]></Content>
